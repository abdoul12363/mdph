        },
        {
          "id": "q_situation_urgence_options",
          "type": "checkbox-group",
          "label": "Situations nécessitant un traitement rapide",
          "required": false,
          "condition_affichage": "q_situation_urgence === true",
          "options": [
            {
              "value": "logement_impossible",
