  "sections": [
    {
      "id": "contact_aidant",
      "title": "Contact des personnes aidantes",
      "questions": [
        {
          "id": "q_contact_aidant",
          "type": "radio",
          "label": "Vous acceptez que nous contactions ces personnes afin de mieux évaluer votre situation",
          "description": "En cochant 'Oui', vous nous autorisez à prendre contact avec les personnes que vous avez désignées comme aidantes. Ces échanges nous permettront de mieux comprendre votre situation et vos besoins spécifiques.\n\nCes contacts seront effectués dans le respect de votre vie privée et uniquement dans le cadre du traitement de votre dossier MDPH. Vos informations resteront strictement confidentielles et ne seront utilisées qu'à des fins d'évaluation de votre situation.",
          "required": true,
          "options": [
            {
              "value": "proche",
              "label": "Un proche"
            },
            {
              "value": "association",
              "label": "Une association"
            },
            {
              "value": "autre",
              "label": "Autre"
            }
          ],
          "pdf_mapping": {
            "field": "Vous acceptez que nous contactions ces personnes afin de mieux évaluer votre situation"
          }
        }
      ]
    },
    {
      "id": "personne_contact",
      "title": "Coordonnées de la personne à contacter",
      "className": "contact-section",
      "condition_section": "q_contact_aidant && (q_contact_aidant.includes('proche') || q_contact_aidant.includes('association') || q_contact_aidant.includes('autre'))",
      "questions": [
        {
          "id": "q_nom_organisme_contact",
          "type": "text",
          "label": "Nom de l'organisme (si pertinent)",
          "description": "Si vous avez coché 'Une association', veuillez indiquer son nom complet et officiel tel qu'enregistré en préfecture",
          "required": false,
          "condition_affichage": "q_contact_aidant && q_contact_aidant.includes('association')",
          "pdf_mapping": {
            "field": "Aide dans vos démarches MDPH Une association"
          },
          "displayBeforeLabel": true
        },
        {
          "id": "q_nom_prenom_contact",
          "type": "text",
          "label": "Nom et prénom de la personne :",
          "description": "Indiquez le nom complet (prénom suivi du nom) de la personne à contacter en priorité pour votre dossier",
          "required": false,
          "pdf_mapping": {
            "field": "Nom et prénom de la personne"
          }
        },
        {
          "id": "q_adresse_contact",
          "type": "text",
          "label": "N° et rue :",
          "description": "Adresse complète (numéro, nom de la rue, complément) où la personne peut être jointe",
          "required": false,
          "pdf_mapping": {
            "field": "N° et rue contact"
          }
        },
        {
          "id": "q_complement_adresse_contact",
          "type": "text",
          "label": "Complément d'adresse :",
          "description": "Bâtiment, étage, couloir, boîte aux lettres, etc. (facultatif)",
          "required": false,
          "pdf_mapping": {
            "field": "Complément d'adresse contact"
          }
        },
        {
          "id": "q_code_postal_contact",
          "type": "text",
          "label": "Code postal :",
          "description": "Code postal à 5 chiffres de la commune de résidence",
          "required": false,
          "pdf_mapping": {
            "field": "Code postal contact"
          }
        },
        {
          "id": "q_ville_contact",
          "type": "text",
          "label": "Commune :",
          "description": "Ville de résidence de la personne à contacter",
          "required": false,
          "pdf_mapping": {
            "field": "Commune contact"
          }
        },
        {
          "id": "q_telephone_contact",
          "type": "tel",
          "label": "Téléphone :",
          "description": "Numéro de téléphone portable ou fixe où joindre la personne. Format : 0X XX XX XX XX",
          "required": false,
          "pdf_mapping": {
            "field": "Téléphone contact"
          }
        }
      ]
    },
